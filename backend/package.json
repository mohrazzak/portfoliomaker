{
  "name": "portfolioMaker",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "db:fresh:dev": "dotenv -e ./src/core/configs/env/.env.development -- npx prisma migrate reset",
    "db:fresh:prod": "dotenv -e ./src/core/configs/env/.env.production -- npx prisma db push --force-reset",
    "db:push:dev": "dotenv -e ./src/core/configs/env/.env.development npx prisma db push && npx prisma generate",
    "db:push:prod": "dotenv -e ./src/core/configs/env/.env.production -- npx prisma migrate dev && npx prisma generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "cross-env NODE_ENV=local nest start",
    "start:debug": "cross-env NODE_ENV=development nest start -b tsc --debug --watch",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:pm2:dev": "npm run build && cross-env NODE_ENV=development pm2 start dist/main.js --name api-dev",
    "start:pm2:prod": "npm run build && cross-env NODE_ENV=production pm2 start dist/main.js --name api-prod",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "db:seed:prod": "dotenv -e src/core/configs/env/.env.production -- ts-node prisma/seed.ts",
    "backup": "dotenv -e src/core/configs/env/.env.development -- ts-node prisma/backup.ts"
  },
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.3",
    "@anatine/zod-openapi": "^2.2.1",
    "@nanogiants/nestjs-swagger-api-exception-decorator": "^1.6.11",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/throttler": "^5.1.2",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@vorlefan/prisma-backup": "^0.3.5",
    "bcryptjs": "^2.4.3",
    "better-nestjs-zod-prisma": "^1.0.0",
    "class-transformer": "^0.5.1",
    "cloudinary": "^2.0.3",
    "compression": "^1.7.4",
    "date-fns": "^3.5.0",
    "express-basic-auth": "^1.2.1",
    "helmet": "^7.1.0",
    "i18next": "^23.10.1",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.5.0",
    "joi": "^17.12.2",
    "nestjs-conditional-exception-filter": "^1.2.1",
    "nestjs-i18n": "^10.4.5",
    "nodemailer": "^6.9.13",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4",
    "zod-i18n-map": "^2.27.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
